<p id="notice"><%= notice %></p>

<div class="grid-x">
  <div class="cell small-12 medium-6">
    <h1>Ingredients</h1>
  </div>
  <div class="cell small-12 medium-6 text-right">
    <%= link_to 'New Ingredient', new_ingredient_path, class: "button primary large" %>

  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Unit measure</th>
      <th>Unit quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.title %></td>
        <td><%= ingredient.price %></td>
        <td><%= ingredient.unit_measure %></td>
        <td><%= ingredient.unit_quantity %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

