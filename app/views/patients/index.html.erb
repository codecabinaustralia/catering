<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Room number</th>
      <th>Allergies</th>
      <th>Diet type</th>
      <th>Diet texture</th>
      <th>Fluid consistency</th>
      <th>Fluid restriction</th>
      <th>Likes</th>
      <th>Dislikes</th>
      <th>Extra information</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.room_number %></td>
        <td><%= patient.allergies %></td>
        <td><%= patient.diet_type %></td>
        <td><%= patient.diet_texture %></td>
        <td><%= patient.fluid_consistency %></td>
        <td><%= patient.fluid_restriction %></td>
        <td><%= patient.likes %></td>
        <td><%= patient.dislikes %></td>
        <td><%= patient.extra_information %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

